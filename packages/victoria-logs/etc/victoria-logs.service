[Unit]
Description=Fast and easy to use database for logs, which can efficiently handle terabytes of logs.
Documentation=https://github.com/VictoriaMetrics/VictoriaLogs
After=network.target

[Service]
Type=simple
User=_victoria-logs
LimitNOFILE=65536
LimitNPROC=32000
StartLimitBurst=5
StartLimitInterval=0
Restart=on-failure
RestartSec=1
EnvironmentFile=/etc/default/victoria-logs
ExecStart=/usr/bin/victoria-logs $ARGS

[Install]
WantedBy=multi-user.target
